    <main id="main">
        <section id="confimrbooking" class="confirmbooking">

            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="title">
                    Booking Confirmed
                </div>

                <div class="content align-items-center">
                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-weight:bold"><i class="bi bi-person"></i> Teacher:<span
                                    style="float:right">:</span></p>
                        </div>
                        <div class="col-md-6" style="text-align: center;">
                            <p>
                                <%= bookingData.teacher %>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-weight:bold"><i class="bi bi-bookmark"></i> Subcategory<span
                                    style="float:right">:</span></p>
                        </div>
                        <div class="col-md-6" style="text-align: center;">
                            <p>
                                <%= bookingData.subcategory %>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-weight:bold"><i class="bi bi-calendar"></i> Date<span
                                    style="float:right">:</span></p>
                        </div>
                        <div class="col-md-6" style="text-align: center;">
                            <p>
                                <%= bookingData.date %>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-weight:bold"><i class="bi bi-clock"></i> Time<span
                                    style="float:right">:</span></p>
                        </div>
                        <div class="col-md-6" style="text-align: center;">
                            <p>
                                <%= bookingData.time %>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-weight:bold"><i class="bi bi-stopwatch"></i> Duration<span
                                    style="float:right">:</span></p>
                        </div>
                        <div class="col-md-6" style="text-align: center;">
                            <p>
                                <%= bookingData.duration %>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12" style="text-align: center;">
                                <a class="btn-primary btn-getstarted" href="/">Okay</a>
                        </div>
                    </div>
                </div>
            </div><!-- End booking posts list -->

