    <main id="main">

        <!-- home Section - Home Page -->
        <section id="home" class="home">

            <img src="assets/img/home-bg.jpeg" alt="" data-aos="fade-in">

            <div class="container">
                <div class="row">
                    <div class="col-lg-10">
