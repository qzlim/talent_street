<body class="login-page" data-bs-spy="scroll" data-bs-target="#navmenu">

    <!-- ======= Header ======= -->
    <header id="header" class="header sticky-top d-flex align-items-center">
        <%- include('navbar.ejs') %>
    </header><!-- End Header -->


    <main id="main">
        <!-- Login Page Section -->
        <section id="login-page" class="login-page text-center">
            <div class="container col-lg-8" data-aos="fade-up" data-aos-delay="100">
                <div class="section-title" data-aos="fade-up">
                    <h2>Log In</h2>
                    <p>Welcome back !</p>
                </div>
                <form class="login-form" action="/login" method="POST">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" name="password" id="password" class="form-control"
                            placeholder="Password">
                    </div>

                    <!-- Forgot Password -->
                    <div class="text-center" style="margin-top:20px;">
                        <a href="javascript:void(0);" onclick="openModal()">Forgot Password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4" style="margin-top:50px;">
                        Log In
                    </button>

                    <!-- Register buttons -->
                    <div class="text-center" style="margin-top:20px;">
                        <h5>Don't have an account ?</h5>
                        <a href="/signup" alt="">Sign Up for an account now !</a>
                    </div>

                    
                </form>
            </div>
        </section>
        <!-- End login page section -->
    </main>

    <!-- Scroll Top Button -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('signup') === 'success') {
            alert('Successfully registered. Welcome!');
        }
        if (urlParams.get('login') === 'havent') {
            alert('You need to log in first before you can book a lesson.');
        }
        if (urlParams.get('login') === 'notfound') {
            alert('User not found. Please check your email.');
        }
        if (urlParams.get('login') === 'incorrect') {
            alert('Incorrect password. Please check your password.');
        }
        if (urlParams.get('reset') === 'user-not-found') {
            alert('Invalid User. Please check your email.');
        }
        if (urlParams.get('reset') === 'email-sent') {
            alert('Reset link has sent to your email.');
        }
        function openModal() {
            document.getElementById('forgotPasswordModal').style.display = 'block';
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById('forgotPasswordModal').style.display = 'none';
        }

        // Close the modal if the user clicks outside of it
        window.onclick = function (event) {
            if (event.target == document.getElementById('forgotPasswordModal')) {
                closeModal();
            }
        }
    </script>

    <div id="forgotPasswordModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Forgot Password</h2>
            <p>Enter your email to receive a password reset link.</p>

            <form id="forgotPasswordForm" action="/forgot-password" method="POST">
                <div class="form-outline mb-4">
                    <input type="email" name="email" id="forgotEmail" class="form-control" placeholder="Email">
                </div>

                <button type="submit" class="btn btn-primary btn-block mb-4" style="margin-top:20px;">
                    Reset Password
                </button>
            </form>
        </div>
    </div>

</body>

</html>